<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>cp</id>
  <baseDirectory></baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory>app</outputDirectory>
	  <directory>${project.build.directory}</directory>
	  <includes>
		<include>${project.build.finalName}.war</include>
	  </includes>	  
    </fileSet> 
    <fileSet>
      <outputDirectory>userSetting</outputDirectory>
	  <directory>${env.TEMP}\${project.artifactId}\clean</directory>
	  <includes>
		<include>${project.artifactId}-user-settings.xml</include>
	  </includes>	  
    </fileSet> 
	<fileSet>
      <outputDirectory>setting</outputDirectory>
	  <directory>${env.TEMP}\${project.artifactId}\clean</directory>
	  <includes>
		<include>${project.artifactId}-admin-settings.xml</include>
	  </includes>	  
    </fileSet>
	<fileSet>
      <outputDirectory>log</outputDirectory>
	  <directory>${src.resources}\log</directory>
    </fileSet>
	<fileSet>
      <outputDirectory>.</outputDirectory>
	  <directory>${src.resources}</directory>
	  <includes>
		<include>descriptor.xml</include>
	  </includes>	  
    </fileSet>		
  </fileSets>
</assembly>